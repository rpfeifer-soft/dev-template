{
   "name": "dev-template",
   "version": "1.0.0",
   "description": "Template to start a new web-application (Docker+Rollup+WebSocket+Typescript)!",
   "type": "module",
   "appid": "dev",
   "dockerAccount": "rpfeifer/team-manager",
   "prodServer": "iserver.local",
   "prodBase": "Desktop/dev-template",
   "githubAccount": "https://github.com/rpfeifer-soft",
   "scripts": {
      "clean": "docker-compose down && rimraf ./dist",
      "compile": "tsc -b src",
      "bundle": "rollup --config",
      "bundle:prod": "rollup --config rollup.config.prod.js",
      "dockerize": "docker-compose build",
      "start:devenv": "npm run compile && npm run bundle && npm run dockerize && (tsc -b src --watch & rollup --watch --config & docker-compose up)",
      "start:dev": "nodemon",
      "start:prod": "node dist/server/server.js",
      "test": "echo \"Error: no test specified\" && exit 1",
      "build": "npm run compile && npm run bundle:prod",
      "publish": "docker build . --file src/Dockerfile --no-cache --tag ${npm_package_dockerAccount}:${npm_package_appid} && docker push ${npm_package_dockerAccount}:${npm_package_appid}",
      "scp": "scp -r install/secrets.json rpfeifer@${npm_package_prodServer}:${npm_package_prodBase}/secrets.json",
      "ssh": "ssh ${npm_package_prodServer} -t \"cd ${npm_package_prodBase}; svn export --force ${npm_package_githubAccount}/${npm_package_name}/trunk/install .; bash --login; echo;\""
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/rpfeifer-soft/dev-template.git"
   },
   "author": "Ren√© Pfeifer",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/rpfeifer-soft/dev-template/issues"
   },
   "homepage": "https://github.com/rpfeifer-soft/dev-template#readme",
   "dependencies": {
      "express": "^4.17.1",
      "ws": "^7.3.0"
   },
   "devDependencies": {
      "@types/express": "^4.17.6",
      "@types/node": "^14.0.1",
      "@types/ws": "^7.2.4",
      "prettier": "^2.0.5",
      "rimraf": "^3.0.2",
      "rollup": "^2.10.2",
      "tslint": "^6.1.2",
      "tslint-react": "^5.0.0",
      "typescript": "^3.9.2",
      "wscat": "^4.0.0"
   }
}
